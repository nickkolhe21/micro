ORG 0000h
SIMP 0030н
ORG 0030н
MOV P0,#80H
MOV P2,#80H
ACALL DELAY
START1:
MOV DPTR,#REVERSE ;
MOV R7,#08H
NEXT: CLRA
MOVC A,@A+DPTR
INC DPTR
MOV P2,A
MOV P0,A
ACALL DELAY
DEC R7
CJNE R7,#00,NEXT
SJMP START1
DELAY:
MOV R1,#0F2H
MOV R2,#0F2H
MOV R3,#0f8H
D1:
DJNZ R1,D1
MOV R1,#010H
DJNZ R2,D1
MOV R2,#010H
DJNZ R3,D1
RET
FORWARD: DB 01H,03H,02H,06H,04H,0CH.08H,09H; forward direction table
REVERSE: DB 09H,08H,0CH,04H,06H 02H,03H.01H revese direction table
END
